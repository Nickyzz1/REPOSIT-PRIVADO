<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>ETS</title>
</head>
<body>
<!-- 1433  62656 -->
    <header>
        <div class="collapse" id="navbarToggleExternalContent">
            <div class="bg-dark p-4">
                <h5 class="text-white h4">Cadastrar</h5>
                <h6 class="text-white h6">
                    <a class="link" href="/cadastroAluno" target="_blank">Aluno</a> |  
                    <a class="link" href="/cadastroSala" target="_blank">Sala</a>
                </h6>
                <span class="text-muted">Toggleable via the navbar brand.</span>
            </div>
        </div>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <main>

        <div class="d-flex justify-content-end m-3">
            <div>
                <form method="post">
                    <label for="sala">Salas de Aula: </label>
                    <select id="sala" onchange="this.form.submit()" name="nome">
                        <option value="0" >Selecione uma sala</option>
                        <% for (let i=0; i<salas.length; i++) { %>
                            <option value='<%= salas[i].IDSala %>' <%= id == salas[i].IDSala ? 'selected' : ''%>> <%= salas[i].Nome %> </option>
                        <% } %>
                    </select>
                </form>
                <% 
                if(id != "0"){
                 
                    // Encontrar a capacidade da sala com o id selecionado
                    
                    var capacidadeSala = 0;
                    for (let i = 0; i < salas.length; i++) { 
                        if (salas[i].IDSala == id) {
                            capacidadeSala = salas[i].Capacidade;
                        }

                        var quantidadeAlunos = alunos.length
                        capacidadeSala -= quantidadeAlunos;
                    }
                    %>
                    <div class="col-12">
                        <a href="/editarSala/<%= id %>"><button class="btn btn-primary">Editar sala</button></a>
                    </div>
                    <p>vagas disponíveis é: <%= capacidadeSala %></p>
                <% } %>

            </div>
        </div>


        <div class="container mt-4">
            <h1 style="color: black;">Alunos</h1>

  
            <div class="row row-cols-1 row-cols-md-2 g-4 box">

                <% for (let i=0; i<alunos.length; i++) { %>
                <div class="col">
                    <div class="card cards">
                        <img src="img/<%= alunos[i].Foto %>" class="card-img-top imgs" alt="Foto aluno">
                        <div class="card-body">
                            <h5 class="card-title"><%= alunos[i].Nome %></h5>
                                <p class="card-text">Idade: <%= alunos[i].Idade %></p>
                                <form action="/editarAluno/<%= alunos[i].IDAluno %>" method="get">
                                <button type="submit" class="btn btn-secondary">Editar</button>
                                </form>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
</body>
</html>
